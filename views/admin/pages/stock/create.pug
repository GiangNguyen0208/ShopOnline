extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(2000)
    
    h1(class="mb-4") ADD NEW PRODUCT

    form(action=`${prefixAdmin}/stocks/create-post` 
        method="POST" 
        enctype="multipart/form-data" 
        id="productForm")
        .form-group
            label(for="title") Title
            input#title.form-control(type="text" name="title" required)
        
        .form-group
            label(for="description") Description
            textarea#description.form-control(name="description" rows="3" required)
        
        .form-group
            label(for="price") Price
            input#price.form-control(type="number" name="price" step="0.01" min="0" required)
        
        .form-group
            label(for="category") Category
            input#category.form-control(type="text" name="category" required)
        
        .form-group
            label(for="discount") Discount
            input#discount.form-control(type="number" name="discount" min="0" step="0.01")
        
        .form-group
            label(for="quantity") Stock
            input#stocks.form-control(type="number" name="quantity" min="0" required)
        
        .form-group
            label(for="thumbnail") Thumbnail
            input#thumbnail.form-control-file(type="file" name="thumbnail" accept="image/*" required)
        
        .form-group
            label(for="status") Status
            select#status.form-control(name="status" required)
                option(value="active") Active
                option(value="inactive") Inactive
        
        .form-group
            label(for="position") Position
            input#position.form-control(type="number" name="position" min="0" required)
        
        button.btn.btn-primary(type="submit") New Create

    script(src="/admin/js/stock.js")
