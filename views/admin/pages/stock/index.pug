extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug

block main
  h1 Product warehouse

  .card.mb-3 
    .card-header Filter and Find 
    .card-body 
      .row
        .col-6
          +filter-status(filterStatus)
        .col-6 
          +search(keyword)
          

  .card.mb-3 
    .card-header List Product on Stock
      .card-body 
        .row 
          .col-8
            +form-change-multi(path, listActive)
          .col-4
            a(
              href=`${prefixAdmin}/stocks/create`
              class="btn btn-outline-success"
            ) + Add New
        
        table(
          class="table table-hover table-sm"
          checkbox-multi
        )
          thead 
            tr 
              th 
                input(
                  type="checkbox"
                  name="checkall"
                )
              th Numerical 
              th Image
              th Title 
              th Price
              th Publish
              th Active

          tbody 
            each item,index in products 
              tr 
                td 
                  input(
                    type="checkbox"
                    name="id"
                    value=item.id
                  )
                td #{index+1}
                td 
                  img(
                    src=item.thumbnail
                    alt=item.title
                    width="100px"
                    height="auto"
                  )
                td #{item.title}
                td #{item.priceFormat}
                td 
                    a(
                        href="javascript:;" 
                        class="badge badge-danger"
                        button-post-sale
                        data-deleted=item.deleted
                        data-id=item.id
                    ) Post for sale
                td 
                  a(
                    href=`${prefixAdmin}/products/edit/`
                    class="btn btn-warning btn-sm"
                  ) Fix 
                  button(
                    class="btn btn-danger btn-sm nl-1"
                    button-delete-product
                    data-id=item.id
                    form-delete-product
                    data-path=path
                  ) Delete
    
    +pagination(pagination)

    form(
      action=""
      method="POST"
      id="form-post-sale"
      data-path=path + `/postSale`
    )

    form(
      action=""
      method="POST"
      id="form-delete-product"
      data-path=path + `/delete`
    )

    script(src="/admin/js/stock.js") ;
        
