mixin pagination(pagination)
    nav
    ul(class="pagination")
      if(pagination.currentPage > 1)
        li(class="page-item")
            button(
                class="page-link"
                button-pagination=1
              ) First Page
        li(class="page-item")
          button(
              class="page-link"
              button-pagination=pagination.currentPage-1
            ) Previous
      - for (var i = 1; i <= pagination.pageNum; i++) 
        li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
          button(
            class="page-link"
            button-pagination=i
          ) #{i}
      if(pagination.currentPage < pagination.pageNum)
        li(class="page-item")
          button(
              class="page-link"
              button-pagination=pagination.currentPage+1
            ) Next
        li(class="page-item")
          button(
              class="page-link"
              button-pagination=pagination.pageNum
            ) Last Page